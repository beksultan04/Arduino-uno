#include "pitches.h"

int buzzer = 8; // Пин, к которому подключен зуммер

// Ноты и длительности (4 = четверть, 8 = восьмая, 2 = половинная и т. д.)
int melody[] = {
  NOTE_G4, NOTE_A4, NOTE_B4, NOTE_C5, NOTE_D5, NOTE_B4, NOTE_A4, NOTE_G4, // I'm still standing
  NOTE_G4, NOTE_A4, NOTE_B4, NOTE_C5, NOTE_D5, NOTE_B4, NOTE_A4, NOTE_G4  // повтор
};

int noteDurations[] = {
  8, 8, 8, 8, 4, 8, 8, 4,
  8, 8, 8, 8, 4, 8, 8, 4
};

void setup() {
  for (int i = 0; i < 16; i++) {
    int noteDuration = 1000 / noteDurations[i];
    tone(buzzer, melody[i], noteDuration);
    delay(noteDuration * 1.3);
    noTone(buzzer);
  }
}

void loop() {
}
